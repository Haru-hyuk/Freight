  "typography": {
    "fontFamily": {
      "primary": "Pretendard",
      "numbers": "Pretendard, -apple-system, sans-serif"
    },
    "features": {
      "numeric": "'tnum' on, 'cv01' on"
    },
    "scale": {
      "display": {
        "size": 28,
        "lineHeight": 36,
        "weight": 700,
        "letterSpacing": -0.2
      },
      "title": {
        "size": 22,
        "lineHeight": 30,
        "weight": 700,
        "letterSpacing": -0.1
      },
      "heading": {
        "size": 18,
        "lineHeight": 26,
        "weight": "600",
        "letterSpacing": -0.1
      },
      "body": {
        "size": 16,
        "lineHeight": 24,
        "weight": "400",
        "letterSpacing": 0
      },
      "detail": {
        "size": 14,
        "lineHeight": 20,
        "weight": 400,
        "letterSpacing": 0
      },
      "caption": {
        "size": 12,
        "lineHeight": 16,
        "weight": 500,
        "letterSpacing": 0.1
      }
    }
  },
  "layout": {
    "spacing": {
      "base": 4,
      "steps": [4, 8, 12, 16, 20, 24, 32, 40, 48]
    },
    "radii": {
      "control": {
        "value": 12,
        "usage": "Buttons, inputs, chips"
      },
      "card": {
        "value": 16,
        "usage": "Cards, sheets"
      },
      "pill": {
        "value": 999,
        "usage": "Badges, pills"
      }
    },
    "zIndex": {
      "base": 0,
      "dropdown": 1000,
      "sticky": 1100,
      "overlay": 1200,
      "modal": 1300,
      "toast": 1400,
      "tooltip": 1500
    }
  },
  "motion": {
    "durationMs": {
      "fast": 120,
      "base": 180,
      "slow": 260
    },
    "easing": {
      "standard": "cubic-bezier(0.2, 0, 0, 1)",
      "emphasized": "cubic-bezier(0.2, 0, 0, 1)"
    }
  },
  "elevation": {
    "web": {
      "cardRaised": {
        "shadow": "0 6px 16px rgba(17, 24, 39, 0.12)"
      },
      "dropdown": {
        "shadow": "0 10px 24px rgba(17, 24, 39, 0.16)"
      }
    },
    "app": {
      "ios": {
        "cardRaised": {
          "shadowColor": "#000000",
          "shadowOpacity": 0.25,
          "shadowRadius": 16,
          "shadowOffset": {
            "width": 0,
            "height": 6
          }
        },
        "sheet": {
          "shadowColor": "#000000",
          "shadowOpacity": 0.28,
          "shadowRadius": 24,
          "shadowOffset": {
            "width": 0,
            "height": 10
          }
        }
      },
      "android": {
        "cardRaised": {
          "elevation": 4
        },
        "sheet": {
          "elevation": 8
        }
      }
    }
  },
  "platform": {
    "web": {
      "interaction": {
        "supportsHover": true,
        "focusVisible": true
      },
      "grid": {
        "columns": 12,
        "gutter": 24,
        "containerMaxWidth": 1280,
        "breakpoints": [360, 768, 1024, 1280, 1440]
      }
    },
    "app": {
      "interaction": {
        "supportsHover": false,
        "pressedFeedback": "overlay",
        "minTapTarget": 44
      },
      "safeArea": {
        "useInsets": true
      }
    }
  },
  "components": {
    "button": {
      "sizes": {
        "sm": {
          "minHeight": 36,
          "paddingX": 12,
          "paddingY": 10,
          "radius": 12
        },
        "md": {
          "minHeight": 44,
          "paddingX": 16,
          "paddingY": 12,
          "radius": 12
        },
        "lg": {
          "minHeight": 52,
          "paddingX": 20,
          "paddingY": 14,
          "radius": 12
        }
      },
      "variants": ["primary", "secondary", "outline", "ghost"]
    },
    "card": {
      "radius": 16,
      "padding": {
        "sm": 16,
        "md": 20
      },
      "variants": ["flat", "raised"]
    },
    "badge": {
      "radius": 999,
      "padding": {
        "sm": {
          "x": 8,
          "y": 4
        },
        "md": {
          "x": 10,
          "y": 6
        }
      },
      "tones": ["brand", "neutral", "success", "warning", "danger"],
      "styles": ["soft", "solid"]
    },
    "status": {
      "dotSize": {
        "sm": 8,
        "md": 10
      },
      "types": ["pending", "in_transit", "delivered", "delayed", "canceled"]
    }
  }
}
